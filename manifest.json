{

    "manifest_version": 2,
    "name": "make YouTube great again",
    "version": "1.0",
  
    "description": "decide how many videos you want on one row",

    "permissions":[
      "activeTab",
      "storage"
    ],

   "icons":{
      "48": "icons/test.png"
    },


    "browser_action":{
      "default_icon": "icons/test.png",
      "default_title": "YouTube fix",
      "default_popup":"menu/index.html"
    },

    "content_scripts":[
      {
        "matches":["*://*.youtube.com/*"],
        "js":["background.js"]
      }
    ]
  
  }